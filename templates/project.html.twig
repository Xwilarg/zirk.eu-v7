<div class="project">
    <h2>{{ project.name ?? "&nbsp;" }}</h2>
    <img data-src="{{ project.image }}" class="lazy"></img>
    <br/>
    <p>
        {{ project.description }}
    </p>
    <a class="button main-link" href="#project-{{ project.name | lower }}" data-category="project-tab" data-target="project-{{ project.name }}" data-dependency="project">Read More</a>
    <div class="project-tab" id="project-{{ project.name | lower }}" hidden>
        {% for component in project.highlight.components %}
            <h3>{{ component.name }}</h3>
            <small>{{ component.techDescription }}</small>
            <p>
                {{ component.description | join('<br/>') | raw }}
            </p>
        {% endfor %}
